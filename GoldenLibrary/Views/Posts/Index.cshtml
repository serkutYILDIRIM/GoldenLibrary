@model PostsViewModel

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4 p-md-5">
            <h1 class="mb-4 fw-bold">Featured Stories</h1>
            @foreach(var post in Model.Posts)
            {
                <div class="post-card">
                    <div class="row">
                        <div class="col-md-8 order-md-1 order-2">
                            <h2 class="post-title">
                                <a href="/posts/details/@post.Url" class="text-decoration-none text-dark">@post.Title</a>
                            </h2>
                            <p class="post-description">@post.Description</p>
                            <div class="post-meta">
                                <span class="me-3"><i class="bi bi-calendar-date me-1"></i>@post.PublishedOn.ToString("MMM d, yyyy")</span>
                                <span><i class="bi bi-clock me-1"></i>4 min read</span>
                            </div>
                        </div>
                        <div class="col-md-4 order-md-2 order-1 mb-3 mb-md-0">
                            <img src="~/img/@post.Image" class="img-fluid rounded" alt="@post.Title">
                        </div>
                    </div>
                </div>
            }
            
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="sticky-top pt-3">
            <vc:tags-menu></vc:tags-menu>
            <vc:new-posts></vc:new-posts>
        </div>
    </div>
</div>


