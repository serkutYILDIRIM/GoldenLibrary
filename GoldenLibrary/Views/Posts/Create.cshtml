@section Scripts {
    <script>
        // Variables for auto-save
        let autoSaveTimer;
        let localSaveTimer;
        const autoSaveDelay = 3000; // 3 seconds
        const localSaveDelay = 1000; // 1 second
        let lastSavedContent = '';
        let savingInProgress = false;
        const saveStatus = document.querySelector('.save-indicator');
        const draftStatus = document.getElementById('draftStatus');
        const restoreDraftBtn = document.getElementById('restoreDraftBtn');
        
        // Get the post ID for storage keys
        const getPostKey = () => {
            const postId = document.getElementById('postId').value;
            return postId !== '0' ? `post_draft_${postId}` : 'new_post_draft';
        };
        
        // LocalStorage functions
        const localStorageDraft = {
            save: function() {
                try {
                    // Get selected tag IDs
                    const selectedTagIds = Array.from(document.querySelectorAll('.tag-checkbox'))
                        .filter(checkbox => checkbox.checked)
                        .map(checkbox => checkbox.value);
                    
                    const draft = {
                        title: document.getElementById('Title').value,
                        description: document.getElementById('Description').value,
                        content: document.getElementById('Content').value,
                        tagIds: selectedTagIds,
                        lastUpdated: new Date().toISOString()
                    };
                    
                    localStorage.setItem(getPostKey(), JSON.stringify(draft));
                    
                    // Try to check storage quota
                    if (navigator.storage && navigator.storage.estimate) {
                        navigator.storage.estimate().then(estimate => {
                            const percentUsed = Math.round((estimate.usage / estimate.quota) * 100);
                            if (percentUsed > 90) {
                                console.warn('LocalStorage is almost full (' + percentUsed + '%). Some drafts may not be saved.');
                            }
                        });
                    }
                    
                    return true;
                } catch (error) {
                    console.error('LocalStorage save error:', error);
                    
                    // Show error message if saving fails
                    showSaveStatus('error', 'Failed to save locally');
                    return false;
                }
            },
            
            load: function() {
                try {
                    const draftData = localStorage.getItem(getPostKey());
                    if (!draftData) return null;
                    
                    return JSON.parse(draftData);
                } catch (error) {
                    console.error('LocalStorage load error:', error);
                    return null;
                }
            },
            
            clear: function() {
                try {
                    localStorage.removeItem(getPostKey());
                    return true;
                } catch (error) {
                    console.error('LocalStorage clear error:', error);
                    return false;
                }
            },
            
            isNewer: function(serverUpdated) {
                const draft = this.load();
                if (!draft || !draft.lastUpdated) return false;
                
                // If no server timestamp provided, but we have a draft, consider it newer
                if (!serverUpdated) return true;
                
