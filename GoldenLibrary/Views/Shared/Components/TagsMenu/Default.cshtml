@model List<Tag>

<div class="card mb-4 border-0">
    <div class="card-header bg-transparent border-0">
        <h5 class="card-title mb-0 fw-bold">Discover topics</h5>
    </div>
    <div class="card-body px-0">
        <div class="d-flex flex-wrap gap-2">
            @foreach (var tag in Model)
            {
                <a href="/posts/tag/@tag.Url" class="badge rounded-pill bg-light text-dark text-decoration-none px-3 py-2 fw-normal">@tag.Text</a>
            }
        </div>
    </div>
</div>